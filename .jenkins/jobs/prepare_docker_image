pipeline {
    agent any

    parameters {
        string(name: 'flow_to_execute', defaultValue: 'named_entity_recognition', description: 'The flow use-case to execute')
        string(name: 'deploy_env', defaultValue: 'dev', description: 'Execution Environment')
        string(name: 'build_id', defaultValue: '${currentBuild.number}', description: 'Execution Environment')
    }
    stages {
        stage('Create Docker Image') {
            steps {
                sh '''
                    # Your Docker image creation command here
                     ./llmops/common/scripts/gen_docker_image.sh \
                        --flow_to_execute $flow_to_execute \
                        --deploy_environment $deploy_env \
                        --build_id $build_id
                '''
            }
        }
    }
}
